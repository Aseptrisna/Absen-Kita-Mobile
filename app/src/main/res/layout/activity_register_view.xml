<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.registerView">
    <LinearLayout
        android:id="@+id/RegisterForm"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_marginTop="10dp"
                android:id="@+id/logo"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/absen"/>
            <TextView
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Register"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:paddingRight="10dp"
                            android:src="@drawable/ic_baseline_perm_identity_24"
                            android:paddingEnd="10dp" />
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:background="@drawable/rounded_edittext"
                            android:layout_height="wrap_content"
                            app:counterTextColor="@color/bg_form"
                            android:layout_marginTop="2dp"
                            android:layout_marginBottom="2dp"
                            android:layout_marginRight="2dp"
                            android:layout_marginLeft="2dp"
                            app:passwordToggleEnabled="false">
                            <com.google.android.material.textfield.TextInputEditText
                                android:layout_marginTop="2dp"
                                android:layout_marginBottom="2dp"
                                android:layout_marginRight="2dp"
                                android:layout_marginLeft="2dp"
                                android:id="@+id/RegisterNama"
                                android:textColorHint="@color/bg_form"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Nama Lengkap"
                                android:inputType="text"
                                android:textSize="15sp"
                                tools:targetApi="lollipop" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:paddingRight="10dp"
                            android:src="@drawable/ic_baseline_contact_phone_24"
                            android:paddingEnd="10dp" />
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:background="@drawable/rounded_edittext"
                            android:layout_height="wrap_content"
                            app:counterTextColor="@color/bg_form"
                            android:layout_marginTop="2dp"
                            android:layout_marginBottom="2dp"
                            android:layout_marginRight="2dp"
                            android:layout_marginLeft="2dp"
                            app:passwordToggleEnabled="false">
                            <com.google.android.material.textfield.TextInputEditText
                                android:layout_marginTop="2dp"
                                android:layout_marginBottom="2dp"
                                android:layout_marginRight="2dp"
                                android:layout_marginLeft="2dp"
                                android:id="@+id/RegisterTelp"
                                android:textColorHint="@color/bg_form"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Nomor Telpon"
                                android:inputType="number"
                                android:textSize="15sp"
                                tools:targetApi="lollipop" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:paddingRight="10dp"
                            android:src="@drawable/ic_baseline_email_24"
                            android:paddingEnd="10dp" />
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:background="@drawable/rounded_edittext"
                            android:layout_height="wrap_content"
                            app:counterTextColor="@color/bg_form"
                            android:layout_marginTop="2dp"
                            android:layout_marginBottom="2dp"
                            android:layout_marginRight="2dp"
                            android:layout_marginLeft="2dp"
                            app:passwordToggleEnabled="false">
                            <com.google.android.material.textfield.TextInputEditText
                                android:layout_marginTop="2dp"
                                android:layout_marginBottom="2dp"
                                android:layout_marginRight="2dp"
                                android:layout_marginLeft="2dp"
                                android:id="@+id/RegisterEmail"
                                android:textColorHint="@color/bg_form"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Email"
                                android:inputType="textEmailAddress"
                                android:textSize="15sp"
                                tools:targetApi="lollipop" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:paddingRight="10dp"
                            android:src="@drawable/ic_baseline_lock_open_24"
                            android:paddingEnd="10dp" />
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_marginTop="2dp"
                            android:layout_marginBottom="2dp"
                            android:layout_marginRight="2dp"
                            android:layout_marginLeft="2dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rounded_edittext"
                            app:passwordToggleEnabled="true">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/RegisterPassword"
                                android:layout_marginTop="2dp"
                                android:layout_marginBottom="2dp"
                                android:layout_marginRight="2dp"
                                android:layout_marginLeft="2dp"
                                android:layout_width="match_parent"
                                android:textColorHint="@color/bg_form"
                                android:layout_height="wrap_content"
                                android:hint="Password"
                                android:inputType="textPassword"
                                android:textSize="15sp"
                                tools:targetApi="lollipop" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:paddingRight="10dp"
                            android:src="@drawable/ic_isntansi"
                            android:paddingEnd="10dp" />
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_marginTop="2dp"
                            android:layout_marginBottom="2dp"
                            android:layout_marginRight="2dp"
                            android:layout_marginLeft="2dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rounded_edittext"
                            app:passwordToggleEnabled="false">
                            <Spinner
                                android:id="@+id/RegisterInstansi"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:hint="Pilih Instansi"
                                android:inputType="text"
                                android:paddingTop="20dp"
                                android:textSize="10sp"
                                tools:targetApi="lollipop" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:paddingRight="10dp"
                            android:src="@drawable/ic_unit"
                            android:paddingEnd="10dp" />
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_marginTop="2dp"
                            android:layout_marginBottom="2dp"
                            android:layout_marginRight="2dp"
                            android:layout_marginLeft="2dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rounded_edittext"
                            app:passwordToggleEnabled="false">
                            <Spinner
                                android:id="@+id/RegisterUnit"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:hint="Pilih Instansi"
                                android:inputType="text"
                                android:paddingTop="20dp"
                                android:textSize="15sp"
                                tools:targetApi="lollipop" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>
                </LinearLayout>
                <Button
                    android:layout_marginLeft="18dp"
                    android:onClick="Register"
                    android:id="@+id/btn_signin"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/button_background"
                    android:text="SIGN UP"
                    android:textColor="@android:color/white" />
                <TextView
                    android:onClick="Login"
                    android:layout_marginLeft="20dp"
                    android:textColor="@android:color/background_dark"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Sudah Punya Akun?Masuk"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>